.block.horizontal-padding-25
  = link_to new_user_registration_path do
    .button.mail
      = icon "far", "envelope", class: "button__mail-icon"
      %span.button__text
        メールアドレス#{@auth_text}
  = link_to '#' do
    .button.facebook
      = icon "fab", "facebook-square", class: "button__facebook-icon"
      %span.button__text
        facebook#{@auth_text}
  = link_to user_google_oauth2_omniauth_authorize_path, method: :post do
    .button.google
      = image_tag "google_icon.png", class: "button__google-icon"
      %span.button__text
        Google#{@auth_text}