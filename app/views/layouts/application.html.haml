!!!
%html
  %head
    %meta{content: "text/html; charset=UTF8", http: { equiv: "Contet-Type"}}/
    %title FurimaSample1
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    %script{src: "https://js.pay.jp/", type: "text/javascript"}
  %body
    - if controller.controller_name == "items" || controller.controller_name == "categories" || controller.controller_name == "item_searches"
      - case controller.action_name
      - when "index", "show"
        = render 'layouts/main_template'
        = render 'layouts/purchaseBtn'
        = render 'layouts/footer'
      - else 
        = render 'layouts/sub_template'
    - elsif controller.controller_name == "users" || controller.controller_name == "cards"
      - case controller.action_name
      - when "show", "new"
        = render 'layouts/main_template'
        = render 'layouts/footer'
      - else
        = render 'layouts/sub_template'
    - else
      = render 'layouts/sub_template'